@model FuncaoSistemas_FM.Models.ClienteModel

@{
    ViewBag.Title = "Beneficiários";

}

@using (Html.BeginForm())
{    
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="modal fade" id="modalBeneficiario">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>@Html.Raw(ViewBag.Title)</h2>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite no formato 999.999.999-99", @maxlength = "14" } })
                                @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ex.: João", @maxlength = "50" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="pull-right">
                                <input type="submit" value="Incluir" class="btn btn-sm btn-success" />
                            </div>
                        </div>
                    </div>
                    <table id="gridBeneficiarios" class="table"></table>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="pull-right">
                                    <button type="button" class="btn btn-default" align="center" data-dismiss="modal">Fechar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
